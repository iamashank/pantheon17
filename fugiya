<script>
$(window).on("load", function(){
  $('.init-load-screen').hide(0);
  setTimeout(function(){
    $('.back').css('filter', 'blur(2px)');
    $('.front').show(0);
  }, 1500);

  setTimeout(function(){
    $('.header').show(0);
  }, 1700);

  setTimeout(function(){
    $('.row').show(0);
    $('.events-div').show(1000);
    $('.events-div').addClass('zoomIn');
  }, 2500);
  $('[data-toggle="tooltip"]').tooltip(); 
  var error = $_GET('error');
  if(error!=undefined){
    if(error==1){
      $(".modal-body").html("<font color='#ffb2b7'>An unknown error occured. We are working to correct it. Please try again later.</font>");
    }
    else if(error==2){
      $(".modal-body").html("<font color='#ffb2b7'>Image Format is Invalid. Please upload only JPG, JPEG or PNG images.</font>");
    }
    else if(error==3){
      $(".modal-body").html("<font color='#ffb2b7'>No such Pantheon ID and Email ID found. Please complete your Individual Registration before registering for Fugiya.</font>");
    }
    else if(error==4){
      $(".modal-body").html("<font color='#c1ffba'>You have already registered for this event. All the best.</font>");
    }
    else{
      $(".modal-body").html("<font color='#c1ffba'>You have successfully registered for Fugiya. You will soon receive a confirmation mail. The coordinators will contact you soon regarding further process.</font>");
    }
    $('#myModal').modal('show');
  }
});

function register(){
  var id = $("#pantheonId").val();
  if(id==""){
    $("#pantheonId").css({"border":"3px solid red"});
    $("#overallError").text("Please enter your Pantheon ID");
    return;
  }
  else{
    $("#pantheonId").css({"border":""});
  }
  var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
  var email = $("#email").val();
  if(email=="" || re.test(email)==false){
    $("#email").css({"border":"3px solid red"});
    $("#overallError").text("Please enter a valid Email ID");
    return;
  }
  else{
    $("#email").css({"border":""});
  }
  var tagline = $("#tagline").val();
  if(tagline==""){
    $("#tagline").css({"border":"3px solid red"});
    $("#overallError").text("Please enter your Tagline");
    return;
  }
  else{
    $("#tagline").css({"border":""});
  }
  if($("#photo").val()==""){
    $("#overallError").text("Please select your photo");
    return;
  }
   $("#overallError").text("");
   $("#register").html("<span class=\"glyphicon glyphicon-refresh glyphicon-refresh-animate\"></span> Registering. Please Wait..");
   document.forms["form"].submit();
}
function $_GET(param) {
  var vars = {};
  window.location.href.replace( location.hash, '' ).replace( 
    /[?&]+([^=&]+)=?([^&]*)?/gi,
    function( m, key, value ) {
      vars[key] = value !== undefined ? value : '';
    }
  );

  if ( param ) {
    return vars[param] ? vars[param] : null;  
  }
  return vars;
}
</script>
